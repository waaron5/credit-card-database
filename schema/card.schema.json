{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://rewrds.com/schema/card.schema.v2.json",
    "title": "Unified Credit Card Schema (Manual + Affiliate Compatible)",
    "type": "object",
    "required": [
        "id",
        "name",
        "issuer",
        "apply_link",
        "annual_fee"
    ],
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^[a-z0-9_\\-]+$"
        },
        "name": {
            "type": "string"
        },
        "issuer": {
            "type": "string"
        },
        "network": {
            "type": "string"
        },
        "card_type": {
            "type": "string"
        },
        "image": {
            "type": "string"
        },
        "apply_link": {
            "type": "string",
            "format": "uri"
        },
        "rates_and_fees_link": {
            "type": [
                "string",
                "null"
            ],
            "format": "uri"
        },
        "annual_fee": {
            "type": "number"
        },
        "foreign_fees": {
            "type": [
                "number",
                "null"
            ]
        },
        "min_credit_score": {
            "type": [
                "integer",
                "null"
            ]
        },
        "ongoing_apr": {
            "type": [
                "string",
                "null"
            ]
        },
        "intro_apr": {
            "type": [
                "string",
                "null"
            ]
        },
        "reward_program": {
            "type": [
                "string",
                "null"
            ]
        },
        "rewards_currency": {
            "type": [
                "string",
                "null"
            ]
        },
        "point_value_baseline": {
            "type": [
                "number",
                "null"
            ]
        },
        "point_value_max": {
            "type": [
                "number",
                "null"
            ]
        },
        "recommended_goals": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "rewards": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "category": {
                        "type": "string"
                    },
                    "rate": {
                        "type": "number"
                    },
                    "details": {
                        "type": [
                            "string",
                            "null"
                        ]
                    }
                }
            }
        },
        "sign_up_bonus": {
            "type": [
                "object",
                "null"
            ],
            "properties": {
                "description": {
                    "type": "string"
                },
                "value_estimate": {
                    "type": [
                        "number",
                        "null"
                    ]
                },
                "spend_requirement": {
                    "type": [
                        "number",
                        "null"
                    ]
                },
                "timeframe_months": {
                    "type": [
                        "integer",
                        "null"
                    ]
                }
            }
        },
        "credits_and_benefits": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "value": {
                        "type": [
                            "number",
                            "null"
                        ]
                    },
                    "details": {
                        "type": "string"
                    },
                    "category": {
                        "type": [
                            "string",
                            "null"
                        ]
                    }
                }
            }
        },
        "transfer_partners": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "is_business": {
            "type": "boolean"
        },
        "available_regions": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "pairing_synergy": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "card_tier": {
            "type": "string"
        },
        "data_source": {
            "type": "string"
        },
        "last_updated": {
            "type": "string"
        },
        "affiliate_metadata": {
            "type": "object",
            "description": "Holds data pulled from affiliate feeds (optional)",
            "properties": {
                "partner": {
                    "type": "string"
                },
                "offer_id": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "feed_source": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "last_synced": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "tracking_link": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "is_affiliate": {
                    "type": "boolean",
                    "default": false
                }
            }
        },
        "quiz_metadata": {
            "type": "object",
            "description": "Stores fields used only by quiz logic",
            "properties": {
                "recommended_for": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "manual_tags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "local_only": {
                    "type": "boolean",
                    "default": false
                },
                "region_priority": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "description": "e.g., 'Utah'"
                }
            }
        }
    },
    "additionalProperties": false
}