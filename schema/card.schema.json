{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Credit Card",
    "type": "object",
    "required": [
        "id",
        "name",
        "issuer",
        "apply_link",
        "annual_fee",
        "data_source",
        "visibility",
        "availability_status",
        "quiz_metadata"
    ],
    "properties": {
        "id": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "issuer": {
            "type": "string"
        },
        "network": {
            "type": [
                "string",
                "null"
            ]
        },
        "card_type": {
            "type": [
                "string",
                "null"
            ]
        },
        "image": {
            "type": [
                "string",
                "null"
            ]
        },
        "apply_link": {
            "type": "string"
        },
        "rates_and_fees_link": {
            "type": [
                "string",
                "null"
            ]
        },
        "annual_fee": {
            "type": "number"
        },
        "foreign_fees": {
            "type": [
                "string",
                "null"
            ]
        },
        "min_credit_score": {
            "type": [
                "number",
                "null"
            ]
        },
        "ongoing_apr": {
            "type": [
                "string",
                "null"
            ]
        },
        "intro_apr": {
            "type": [
                "string",
                "null"
            ]
        },
        "reward_program": {
            "type": [
                "string",
                "null"
            ]
        },
        "rewards_currency": {
            "type": [
                "string",
                "null"
            ]
        },
        "point_value_baseline": {
            "type": [
                "number",
                "null"
            ]
        },
        "point_value_max": {
            "type": [
                "number",
                "null"
            ]
        },
        "rewards": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "category",
                    "rate",
                    "description"
                ],
                "properties": {
                    "category": {
                        "type": "string"
                    },
                    "rate": {
                        "type": "number"
                    },
                    "description": {
                        "type": "string"
                    }
                }
            }
        },
        "recommended_goals": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "sign_up_bonus": {
            "type": "object",
            "properties": {
                "description": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "value_estimate": {
                    "type": [
                        "number",
                        "null"
                    ]
                },
                "spend_requirement": {
                    "type": [
                        "number",
                        "null"
                    ]
                },
                "timeframe_months": {
                    "type": [
                        "number",
                        "null"
                    ]
                }
            }
        },
        "credits_and_benefits": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "transfer_partners": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "eligibility": {
            "type": [
                "string",
                "null"
            ]
        },
        "is_business": {
            "type": "boolean"
        },
        "available_regions": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "pairing_synergy": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "card_tier": {
            "type": [
                "string",
                "null"
            ]
        },
        "availability_status": {
            "type": "string"
        },
        "visibility": {
            "type": "boolean"
        },
        "data_source": {
            "type": "string"
        },
        "last_updated": {
            "type": [
                "string",
                "null"
            ]
        },
        "affiliate_metadata": {
            "type": "object",
            "properties": {
                "partner": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "offer_id": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "feed_source": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "last_synced": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "tracking_link": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "is_affiliate": {
                    "type": "boolean"
                }
            }
        },
        "quiz_metadata": {
            "type": "object",
            "required": [
                "recommended_for",
                "manual_tags",
                "local_only",
                "region_priority"
            ],
            "properties": {
                "recommended_for": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "manual_tags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "local_only": {
                    "type": "boolean"
                },
                "region_priority": {
                    "type": "string"
                }
            }
        }
    }
}